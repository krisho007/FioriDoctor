{
  "manifest_version": 2,
 
  "name": "Fiori Doctor",
  "description": "For the starry–eyed Fiori Developer",
  "version": "2.9",
  "short_name": "Starry–eyed Fiori Developer",
  "icons": { 
        "16":"Icons/star_blue_48.png",
        "48":"Icons/star_blue_48.png",
        "128":"Icons/star_blue_128.png" 
    },
   "browser_action": {
   "default_icon": "Icons/star_blue_48.png",
   "default_title": "Start Fiori Doctor"
  },
    "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["/ThirdParty/jquery-1.11.3.min.js","/ThirdParty/notify.min.js","/ThirdParty/URI.js","content_script.js"],
      "css":["/ThirdParty/myCSS.css"]
    }
  ],
  "permissions": [
   "activeTab",
   "tabs",
    "browsingData",
    "contextMenus",
    "webRequestBlocking",
    "webRequest",
    "<all_urls>"
   ],
   "web_accessible_resources": [
    "ThirdParty/*",
    "sniffOData.js",
    "OptionDialog.js"
  ]
}